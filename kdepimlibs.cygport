inherit kde4

NAME="kdepimlibs"
VERSION=4.14.10
RELEASE=2
CATEGORY="Libs"
SUMMARY="KDE PIM libraries"
DESCRIPTION="This module includes libraries that are central to the development
and execution of a KDE-PIM application."
SRC_URI="mirror://kde/stable/applications/15.04.3/src/${NAME}-${VERSION}.tar.xz"

PKG_NAMES="libkpim4 libkpim-common libkpim-devel"
libkpim4_SUMMARY="${SUMMARY} (runtime)"
libkpim4_REQUIRES="libkpim-common"
libkpim4_CONTENTS="--exclude=designer usr/bin/ usr/lib/kde4/"
libkpim_common_SUMMARY="${SUMMARY} (runtime data)"
libkpim_common_CONTENTS="--exclude=cmake etc/ usr/share/"
libkpim_devel_SUMMARY="${SUMMARY} (development)"
libkpim_devel_REQUIRES="libakonadiprotocolinternals-devel libboost-devel libkdecore-devel libQtCore4-devel libQtDBus4-devel libQtGui4-devel"
libkpim_devel_CONTENTS="usr/include/ usr/lib/cmake/ usr/lib/gpgmepp/ usr/lib/kde4/plugins/designer/
                        usr/lib/lib* usr/share/kde4/apps/cmake/"
